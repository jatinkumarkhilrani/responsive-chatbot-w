#!/usr/bin/env bash

# Pre-commit Hook Script
# This runs comprehensive tests before allowing commits

set -e

echo "ğŸ” Running pre-commit checks..."

# 1. TypeScript Check
echo "ğŸ“ Checking TypeScript..."
npm run test:types

# 2. ESLint Check  
echo "ğŸ” Running ESLint..."
npm run lint

# 3. Build Test (GitHub Pages)
echo "ğŸ”¨ Testing GitHub Pages build..."
npm run build:github-pages

# 4. Build Test (Standalone)
echo "ğŸ”¨ Testing standalone build..."
npm run build:standalone

# 5. Comprehensive Tests
echo "ğŸ§ª Running all comprehensive tests..."
npm run test:all

# 6. Performance Check
echo "âš¡ Performance check..."
if [ -d "dist" ]; then
    BUNDLE_SIZE=$(du -sh dist | cut -f1)
    echo "   Bundle size: $BUNDLE_SIZE"
fi

echo "âœ… All pre-commit checks passed!"
echo "ğŸš€ Ready to commit"